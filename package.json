    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "openai": "^4.20.0",
    "docx": "^8.2.2",
    "puppeteer": "^21.5.0",
    "epub-gen": "^0.1.0",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
